{
  "files.autoSave": "off",
  "files.associations": {
    "*.jsx": "javascriptreact",
    "*.js": "javascript",
    "*.tsx": "typescriptreact",
    "*.ts": "typescript",
    "*.scss": "scss"
  },
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.fixAll.eslint": true
  },
  "editor.formatOnSave": true
}